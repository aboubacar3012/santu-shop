generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --- Enums for type safety ---

enum Role {
  OWNER
  ADMIN
  SELLER
  USER
}

enum ActionType {
  GET
  CREATE
  UPDATE
  DELETE
  IMPORT
  EXPORT
  FORGOTPASSWORD
  RESETPASSWORD
}

// --- E-commerce (boutiques, produits, commandes) ---

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}

/// Catégorie de produits (vetements, chaussures, electronique, maisons, autres).
model Category {
  id          String    @id // slug: vetements, chaussures, etc.
  label       String
  slug        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  products Product[]

  @@map("category")
}

/// Vendeur / boutique (sellerName, sellerSlug dans l’UI).
model Seller {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  userId    String?  // optionnel : propriétaire de la boutique (User)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  products Product[]

  @@map("seller")
}

/// Produit d’une boutique (ShopPost dans l’UI : title, description, images, price, etc.).
model Product {
  id            String   @id @default(uuid())
  title         String
  description   String
  categoryId    String
  sellerId      String
  images        String[]  // URLs des images
  price         Int       // en GNF (ou centimes)
  originalPrice Int?      // prix barré si promo
  available     Boolean   @default(true)
  quantity      Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  category   Category   @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  seller     Seller     @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]

  @@index([categoryId])
  @@index([sellerId])
  @@map("product")
}

/// Commande client (données du formulaire OrderInfoForm + total + statut).
model Order {
  id                 String      @id @default(uuid())
  userId             String?     // client (optionnel pour invité)
  status             OrderStatus @default(PENDING)
  total              Int         // total en GNF
  customerFirstName  String      // prénom
  customerLastName   String      // nom
  customerPhone      String
  district           String?    // quartier
  commune            String?
  city               String?
  latitude           Float?
  longitude          Float?
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  user       User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  orderItems OrderItem[]

  @@index([userId])
  @@index([status])
  @@map("order")
}

/// Ligne de commande (produit + quantité + prix unitaire au moment de la commande).
model OrderItem {
  id           String   @id @default(uuid())
  orderId      String
  productId    String
  productTitle String   // snapshot du titre
  quantity     Int
  unitPrice    Int      // prix unitaire en GNF au moment de la commande
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
  @@map("order_item")
}

// --- Auth & utilisateur ---

/// Représente un utilisateur de l'application.
/// Contient les informations personnelles de base (nom, email, téléphone, etc.).

model User {
  id               String           @id @default(uuid())
  firstName        String?
  lastName         String?
  dateOfBirth      String?
  title            String?
  email            String
  emailVerified    Boolean?
  image            String?
  phone            String?
  isVerified       Boolean          @default(false)
  isActive         Boolean          @default(true)
  role             Role             @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  sessions        Session[]
  accounts        Account[]
  orders          Order[]
  sellers         Seller[]

  @@unique([email])
  @@map("user")
}

/// Représente une session utilisateur active dans l'application.
/// Stocke les informations de connexion (token, expiration, IP, user agent).
/// Utilisée pour gérer l'authentification et la sécurité des sessions.

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@unique([token])
  @@index([userId])
  @@map("session")
}

/// Représente un compte d'authentification externe lié à un utilisateur.
/// Permet la connexion via OAuth (Google, GitHub, etc.) ou email/password.
/// Stocke les tokens d'accès et les informations spécifiques au provider (ex: GitHub App installation).

model Account {
  id                    String    @id
  accountId             String
  providerName          String?
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id])
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  // GitHub App installation fields
  installationId      String? // ID de l'installation GitHub App
  installationType    String? // "User" ou "Organization"
  installationLogin   String? // Login du compte/org où l'app est installée
  repositorySelection String? // "all" ou "selected"

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("account")
}

/// Stocke les codes de vérification temporaires (email, mot de passe oublié, etc.).
/// Chaque enregistrement a une date d'expiration pour la sécurité.
/// Utilisé pour les processus de vérification d'email, réinitialisation de mot de passe, etc.

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@index([identifier])
  @@map("verification")
}

